#include <SoftwareSerial.h>
SoftwareSerial BTserial(0, 1); // RX | TX

byte reader;
byte receive[2];
byte bytes[16];
long OnTime1 = 1000;
unsigned long previousMillis1 = 0; 

void setup() {
  Serial.begin(9600);
  BTserial.begin(9600);
}

void loop() {
 
  unsigned long currentMillis1 = millis();

  receive[0]=3;
      
         if(currentMillis1 - previousMillis1 >= OnTime1)
      {
        if(receive[0]==3){
            bytes[0]=highByte(1200);
            bytes[1]=lowByte(1200);
            bytes[2]=highByte(1200);
            bytes[3]=lowByte(1200);
            bytes[4]=highByte(1200);
            bytes[5]=lowByte(1200);
            bytes[6]=highByte(1200);
            bytes[7]=lowByte(1200);
            bytes[8]=highByte(1200);
            bytes[9]=lowByte(1200);
            bytes[10]=highByte(1200);
            bytes[11]=lowByte(1200);
            bytes[12]=highByte(1200);
            bytes[13]=lowByte(1200);
            bytes[14]=highByte(1200);
            bytes[15]=lowByte(1200);

            Serial.write(bytes,16);
          }
          previousMillis1 = currentMillis1;
        }
}